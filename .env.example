# API Configuration
PORT=8000
HOST=0.0.0.0
LOG_LEVEL=info  # debug, info, warning, error, critical

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Development Settings
RELOAD=false  # Set to true for development
DEBUG=false   # Set to true for development

# Content Settings
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
PLAYWRIGHT_TIMEOUT=30000     # 30 seconds in milliseconds

# API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here

# Rate Limiting
RATE_LIMIT=10               # Requests per minute
RATE_WINDOW=60             # Window size in seconds

# Security
API_KEY_HEADER=X-API-Key   # Custom API key header name
SECURE_HEADERS=true        # Enable security headers

# Monitoring
ENABLE_METRICS=true        # Enable Prometheus metrics
METRICS_PORT=9090         # Port for metrics endpoint 